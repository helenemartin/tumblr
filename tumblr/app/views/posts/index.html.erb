<h1>Listing posts</h1>

<% @posts.each do |post| %>

<p>

  <% if post.image? %>
    <%= image_tag post.image_url, width: 500 %>
  <% else %>
    No Image
    <% end %>
  </p>
<% end %>

  <tr>
    <th>Title</th>
    <th>Post type</th>
    <th>Image extension</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.post_type %></td>
    <td><%= post.image_extension %></td>
    <td><%= post.tags %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
